<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>

        <item name="android:textViewStyle">@style/AppTextViewStyle</item>

        <item name="elevation">0dp</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.DrawerTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorControlHighlight">@color/colorPrimary35</item>
        <item name="android:scrollbarThumbVertical">@android:color/transparent</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!-- Control's styles -->
    <style name="AppTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="MainColorTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorBlueButton</item>
    </style>

    <style name="AppBlueButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="colorAccent">@color/colorBlueButtonDisabled</item>
        <item name="colorButtonNormal">@color/colorBlueButton</item>
    </style>

    <style name="AppWhiteButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorBlueButton</item>
        <item name="colorAccent">@color/colorWhiteButtonDisabled</item>
        <item name="colorButtonNormal">@color/colorWhiteButton</item>
    </style>

    <style name="AppCheckBoxStyle" parent="Theme.AppCompat">
        <item name="colorAccent">@color/colorBlueButton</item>
        <item name="android:textColorSecondary">@color/colorBlueButton</item>
    </style>

    <style name="AppDarkStyleInput" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">@color/colorLightText</item>
        <item name="android:textColorHint">@color/light_text_color_selector</item>

        <item name="colorAccent">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorWhite60</item>
        <item name="colorControlActivated">@color/colorWhite</item>
    </style>
    
    <style name="AppDarkStyleInput.HintTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorLightText</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppDarkStyleInput.ErrorTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorError</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Control's styles -->

    <style name="RegistrationTheme" parent="Theme.AppCompat.Light">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>

        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorWhite</item>

        <item name="android:textViewStyle">@style/AppTextViewStyle</item>
        <item name="android:buttonStyle">@style/AppBlueButtonStyle</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
        <item name="android:textColorPrimaryInverse">@color/colorWhite</item>
    </style>
</resources>
