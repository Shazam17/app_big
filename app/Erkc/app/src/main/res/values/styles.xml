<resources>

    <!-- Application Themes -->

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="titleTextColor">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>

        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="actionBarTheme">@style/AppTheme.ActionBarTheme</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorWhite</item>

        <item name="colorControlNormal">@color/colorWhite60</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>

        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="actionBarTheme">@style/AppTheme.ActionBarTheme</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="AppTheme.NoActionBar.SplashScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!-- Control's styles -->

    <!-- ActionBar style -->

    <style name="ActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="background">?attr/colorPrimary</item>
        <item name="elevation">0dp</item>
        <item name="titleTextStyle">@style/ActionBar.TitleTextStyle</item>
    </style>

    <style name="ActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorLightText</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <!-- Drawer style -->

    <style name="AppTheme.DrawerTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="android:scrollbarThumbVertical">@android:color/transparent</item>
    </style>

    <!-- Buttons style -->

    <style name="AppBlueButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/light_text_color_selector</item>
        <item name="colorButtonNormal">@color/blue_button_color_selector</item>
    </style>

    <style name="AppWhiteButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/blue_text_color_selector</item>
        <item name="colorButtonNormal">@color/white_button_color_selector</item>
    </style>

    <style name="AppWhiteBlueButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/blue_text_color_selector</item>
        <item name="colorButtonNormal">@color/white_button_color_selector</item>
        <item name="backgroundTint">@color/colorWhite</item>
    </style>

    <style name="AppCheckBoxStyle" parent="Theme.AppCompat">
        <item name="colorAccent">@color/colorBlueButton</item>
        <item name="android:textColorSecondary">@color/colorBlueButton</item>
    </style>

    <style name="AppCheckBoxStylePrimary" parent="Theme.AppCompat">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>

    <!-- Light Input for Dark background -->
    <style name="BodyTextView" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_marginTop">@dimen/half_default_margin</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPaymentBodyText</item>
    </style>

    <style name="PaymentInfoCurrencyTextView" parent="BodyTextView">
        <item name="android:layout_marginTop">@dimen/half_default_margin</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPaymentInfoCurrencyTextColor</item>
    </style>

    <style name="BodyTextViewSub" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorPaymentSubText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Input for Dark Theme -->
    <style name="AppDarkStyleInput" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">@color/colorLightText</item>
        <item name="android:textColorHint">@color/colorDarkHint</item>

        <item name="colorAccent">@color/colorDarkInput</item>
        <item name="colorControlNormal">@color/colorDarkInputDisabled</item>
        <item name="colorControlActivated">@color/colorDarkInput</item>
    </style>

    <style name="AppDarkStyleInput.HintTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorDarkHint</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppDarkStyleInput.ErrorTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorError</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- TextView styles -->
    <style name="MainColorTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorBlueButton</item>
    </style>

    <style name="LargeTextViewPrimaryColor" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="BodyTextViewPrimaryColor" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
