<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/half_default_margin"
    android:layout_marginBottom="@dimen/half_default_margin"
    android:layout_height="wrap_content">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/ipuValueWrapper"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:theme="@style/AppStyleInput"
        app:layout_constraintHorizontal_bias="0.0"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/ipuValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/google_title_text_size" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/ipuLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_gravity="right"
        android:textColor="@color/colorBlack"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>