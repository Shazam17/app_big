<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:orientation="horizontal"
    android:paddingVertical="4dp">

    <android.support.design.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/itemStatusRequestOvalView"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="18dp">

        <TextView
            android:id="@+id/itemStatusRequestTextStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingVertical="6dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:text="Ожидает рассмотрение" />

    </android.support.design.circularreveal.cardview.CircularRevealCardView>

    <TextView
        android:id="@+id/itemStatusRequestDateStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:textAlignment="textEnd"
        android:textSize="16dp"
        tools:text="02.06.2019 19:04" />


</LinearLayout>