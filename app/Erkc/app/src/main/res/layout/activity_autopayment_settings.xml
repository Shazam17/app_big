<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activityAutoPaymentSettingsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <View
        android:id="@+id/topBackgroundBox"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/colorLightGrayBackground"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/paymentSelectLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/autopayment_screen_payment_type_label"
        android:textAlignment="textEnd"
        android:textColor="@color/colorBaseText"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/topBackgroundBox"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topBackgroundBox"
        />

    <TextView
        android:id="@+id/paymentModeSelectTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/paymentSelectLabelTextView"
        app:layout_constraintRight_toRightOf="parent"
        android:clickable="true"
        android:text="@string/autopayment_screen_receipt_add_button_label"
        android:textAlignment="textEnd"
        android:textAllCaps="true"
        android:textColor="@color/colorAutoPaymentDetailsTextBlue"
        android:textSize="14sp"
        tools:text="Автоплатеж"
        />

    <TextView
        android:id="@+id/receiptLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/autopayment_screen_receipt_label"
        android:textAlignment="textEnd"
        android:textColor="@color/colorBaseText"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBackgroundBox" />

    <TextView
        android:id="@+id/receiptIdTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:text="@string/autopayment_screen_receipt_add_button_label"
        android:textAlignment="textEnd"
        android:textColor="@color/colorAutoPaymentDetailsTextBlue"
        android:textSize="14sp"
        android:textAllCaps="true"
        app:layout_constraintBaseline_toBaselineOf="@+id/receiptLabelTextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/receiptLabelTextView"
        tools:text="234 678 45678 90" />

    <TextView
        android:id="@+id/receiptTypeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:text=""
        android:textAlignment="textEnd"
        android:textColor="@color/colorAutoPaymentDetailsTextBlue"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/receiptIdTextView"
        app:layout_constraintLeft_toRightOf="@+id/receiptLabelTextView"
        tools:text="Оплата ХВ" />

    <TextView
        android:id="@+id/receiptAddressTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:text=""
        android:textAlignment="textEnd"
        android:textColor="@color/colorAutoPaymentDetailsTextBlue"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/receiptTypeTextView"
        app:layout_constraintLeft_toRightOf="@+id/receiptLabelTextView"
        tools:text="пр.Ленина 34, кв.45" />

    <TextView
        android:id="@+id/cardPaymentLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/autopayment_screen_cardpayment_label"
        android:textColor="@color/colorBaseText"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/receiptAddressTextView" />

    <TextView
        android:id="@+id/cardIdTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:text="@string/autopayment_screen_cardpayment_add_button_label"
        android:textAlignment="textEnd"
        android:textColor="@color/colorAutoPaymentDetailsTextBlue"
        android:textSize="14sp"
        android:textAllCaps="true"

        app:layout_constraintBaseline_toBaselineOf="@+id/cardPaymentLabelTextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/cardPaymentLabelTextView"
        tools:text="56** **** **** **67" />

    <TextView
        android:id="@+id/cardTypeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:text=""
        android:textAlignment="textEnd"
        android:textColor="@color/colorAutoPaymentDetailsTextBlue"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardIdTextView"
        app:layout_constraintLeft_toRightOf="@+id/cardPaymentLabelTextView"
        tools:text="Зарплатная" />

    <FrameLayout
        android:id="@+id/maxSumContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginEnd="16dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardTypeTextView">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/maxSumTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/autopayment_screen_max_sum_hint"
            android:visibility="gone"
            >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/maxSumEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/agreementTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/autopayment_screen_agreement_checkbox_label"
        android:textAlignment="textStart"
        android:textColor="@color/colorBaseText"
        android:textSize="14sp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/agreementCheckBox"
        app:layout_constraintTop_toBottomOf="@+id/maxSumContainer"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <CheckBox
        android:id="@+id/agreementCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="16dp"
        android:text=""
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/agreementTextView"
        app:layout_constraintLeft_toRightOf="@+id/agreementTextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/agreementTextView"
        android:visibility="gone"
        tools:visibility="visible"
        />


    <FrameLayout
        android:id="@+id/bottomSheetLayout"
        android:layout_width="0dp"
        android:layout_height="77dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

    </FrameLayout>

    <Button
        android:id="@+id/continueButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/triple_default_margin"
        android:paddingStart="@dimen/triple_default_margin"
        android:text="@string/main_screen_continue_button"
        android:theme="@style/AppWhiteButtonStyle"
        app:layout_constraintBottom_toBottomOf="@+id/bottomSheetLayout"
        app:layout_constraintLeft_toLeftOf="@+id/bottomSheetLayout"
        app:layout_constraintRight_toRightOf="@+id/bottomSheetLayout"
        app:layout_constraintTop_toTopOf="@+id/bottomSheetLayout"
        tools:enabled="false" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingBottom="@dimen/half_default_margin"
        android:paddingTop="@dimen/half_default_margin"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/continueButton"
        app:layout_constraintRight_toRightOf="@+id/continueButton"
        app:layout_constraintTop_toTopOf="@+id/continueButton"
        tools:visibility="visible" />


</android.support.constraint.ConstraintLayout>