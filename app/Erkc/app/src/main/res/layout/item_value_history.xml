<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/itemValueHistoryDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorHistoryValueBody"
        android:textSize="16dp"
        tools:text="20.08.2016" />

    <View
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/quarter_default_margin"
        android:layout_marginEnd="@dimen/half_default_margin"
        android:layout_marginStart="@dimen/half_default_margin"
        android:layout_weight="1"
        android:background="@drawable/line_dots"
        android:hardwareAccelerated="false"
        android:layerType="software" />

    <TextView
        android:id="@+id/itemValueHistoryValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorHistoryValueBody"
        android:textSize="16dp"
        tools:text="0000,263" />

</LinearLayout>