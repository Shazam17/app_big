<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.TextInputLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="@string/add_card_name_hint"
    android:padding="@dimen/default_margin"
    android:theme="@style/AppLightStyleInput"
    app:errorEnabled="true"
    app:errorTextAppearance="@style/AppLightStyleInput.ErrorTextAppearance"
    app:hintTextAppearance="@style/AppLightStyleInput.HintTextAppearance">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/addCardNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:singleLine="true" />
</android.support.design.widget.TextInputLayout>
