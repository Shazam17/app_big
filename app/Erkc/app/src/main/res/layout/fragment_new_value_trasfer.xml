<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newValueTransferRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/newValueTransferBarcodeLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:hint="@string/main_screen_barcode_hint"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/newValueTransferBarcodeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLines="1"
            android:paddingEnd="30dp" />

    </android.support.design.widget.TextInputLayout>

    <ImageButton
        android:id="@+id/newValueTransferCameraButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end|center_vertical"
        android:layout_marginBottom="@dimen/default_margin"
        android:background="@null"
        android:src="@drawable/ic_communication_phone"
        app:layout_constraintBottom_toBottomOf="@+id/newValueTransferBarcodeLayout"
        app:layout_constraintRight_toRightOf="@+id/newValueTransferBarcodeLayout"
        app:layout_constraintTop_toTopOf="@+id/newValueTransferBarcodeLayout" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/newValueTransferStreetLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:hint="@string/main_screen_street_hint"
        app:layout_constraintHorizontal_bias="0.78"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newValueTransferBarcodeLayout">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/newValueTransferStreetEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences"
            android:maxLines="1" />

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newValueTransferStreetLayout">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/newValueTransferHouseLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/main_screen_house_hint">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/newValueTransferHouseEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/newValueTransferApartmentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/main_screen_apartment_hint">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/newValueTransferApartmentEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

    </FrameLayout>

    <Button
        android:id="@+id/newValueTransferContinueButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/triple_default_margin"
        android:paddingStart="@dimen/triple_default_margin"
        android:text="@string/main_screen_continue_button"
        android:theme="@style/AppWhiteButtonStyle"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintLeft_toLeftOf="@+id/linearLayout"
        app:layout_constraintRight_toRightOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        tools:enabled="false" />

    <ProgressBar
        android:id="@+id/newValueTransferProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingBottom="@dimen/half_default_margin"
        android:paddingTop="@dimen/half_default_margin"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/newValueTransferContinueButton"
        app:layout_constraintRight_toRightOf="@+id/newValueTransferContinueButton"
        app:layout_constraintTop_toTopOf="@+id/newValueTransferContinueButton"
        tools:visibility="visible" />

</android.support.constraint.ConstraintLayout>