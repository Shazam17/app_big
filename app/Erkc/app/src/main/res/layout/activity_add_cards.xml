<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addCardViewFlipper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.addcard.AddCardActivity">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_card_name_hint"
        android:padding="@dimen/default_margin"
        android:theme="@style/AppLightStyleInput"
        app:errorEnabled="true"
        app:errorTextAppearance="@style/AppLightStyleInput.ErrorTextAppearance"
        app:hintTextAppearance="@style/AppLightStyleInput.HintTextAppearance">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/addCardNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <WebView
            android:id="@+id/addCardWebView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/addCardDoneButtonWrapper"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <Button
                android:id="@+id/addCardDoneButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin"
                android:text="@string/add_card_done"
                android:textColor="@color/colorPrimary"
                tools:enabled="true" />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</ViewFlipper>
